@page
@model EchoSport.Pages.Articles.DetailsModel

@{
    ViewData["Title"] = @Html.DisplayFor(modelItem => Model.Article.Title);
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container">
    <br />
    <div class="row ">
        <div class="col-md-10 col-md-offset-1 text-primary">
            <h1>@Html.DisplayFor(modelItem => Model.Article.Title)</h1>
            <p>Published on: @Html.DisplayFor(modelItem => Model.Article.PublishDate)</p>
        </div>
        <div class="col-md-10 col-md-offset-1">
            <img src="@Html.DisplayFor(modelItem => Model.Article.Image)" alt="@Html.DisplayFor(modelItem => Model.Article.Title)" class="img-responsive img-thumbnail" width="100%" />
        </div>
        <br />
        <div class="col-md-10 col-md-offset-1 text-primary h3">
            <p>@Html.DisplayFor(modelItem => Model.Article.Text)</p>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("Administrator"))
            {
                <br/>
                <div class="col-md-10 col-md-offset-1">
                    <a class="btn btn-warning" role="button" asp-page="./Edit" asp-route-id="@Model.Article.ID">Edit</a>
                    <a class="btn btn-primary" role="button" asp-page="../Index">Back</a>
                    <a class="btn btn-danger" role="button" asp-page="./Delete" asp-route-id="@Model.Article.ID">Delete</a>
                </div>
            }
        }
    </div>
</div>

